worker_processes 1;
events { worker_connections 1024; }

http {
    server {
        listen <%= ENV["PORT"] %>;

        location / {
            root <%= ENV["HOME"] %>/public;
            try_files $uri /index.html;
        }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
            root <%= ENV["HOME"] %>/public;
        }
    }
}